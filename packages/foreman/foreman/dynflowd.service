[Unit]
Description=Foreman jobs daemon
Documentation=https://theforeman.org
After=network.target remote-fs.target nss-lookup.target

[Service]
Type=forking
User=foreman
TimeoutSec=90
WorkingDirectory=/usr/share/foreman
ExecStart=/usr/sbin/dynflowd start
ExecStop=/usr/sbin/dynflowd stop
Environment=MALLOC_ARENA_MAX=2
EnvironmentFile=-/etc/sysconfig/dynflowd

[Install]
WantedBy=multi-user.target
Alias=foreman-tasks.service
