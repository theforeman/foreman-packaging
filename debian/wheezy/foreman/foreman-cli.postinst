#!/bin/sh
# postinst script for foreman
#
# see: dh_installdeb(1)

if [ ! -z "${DEBUG}" ]; then
  set -x
else
  set -e
fi

# Enable (uncomment) hammer-cli-foreman module in hammer's config
config='/etc/foreman/cli_config.yml'
if [ -f $config ]; then
  sed -e 's/\(\s*\)#\s*\(-\s*hammer_cli_foreman\)/\1\2/' -i $config
fi

#DEBHELPER#

exit 0
